@model IEnumerable<EventViewModel>

@section Styles{
    <link rel="stylesheet" href="~/css/form.css">
}

<div style="padding-top:170px; padding-bottom:170px; margin-left:10%; margin-right:10%;">
    <div style="margin-right: 10%; margin-left: 10%;">
        <div id="view-all">
            <div class="col" style="width:auto; height:400px; overflow:auto; padding: 15px;">
                <table class="table-custom">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Status</th>
                        <th scope="col">Title</th>
                        <th scope="col">Event DateTime</th>
                        <th scope="col"><button class="btn btn-outline-success" onclick="showInPopup('@Url.Action("Create", "Event")', 'Create')">Add New</button></th>

                    </tr>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <th scope="col">No Events were found!</th>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope="col">@item.Id</td>
                            <td scope="col">@item.Status</td>
                            <td scope="col">@item.Title</td>
                            <td scope="col">@item.EventDateTime</td>
                            <th scope="col"><button class="btn btn-outline-primary" onclick="showInPopup('@Url.Action("Update", "Event", new { id = item.Id})', 'Update')">Edit</button></th>
                            <td scope="col"><button class="btn btn-outline-danger btn-sm" onclick="window.location='@Url.Action("Delete", "Event", new { id = item.Id})'">Delete</button></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

</div>