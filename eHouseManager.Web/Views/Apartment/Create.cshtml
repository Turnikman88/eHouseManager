@model UserApartmentViewModel
@section Styles{
<link rel="stylesheet" href="~/css/form.css">
}
@{
    Layout = "/Views/Shared/_LayoutEmpty.cshtml";
}

<div class="row">
    <div class="col">
        <form asp-action="Create" asp-controller="Apartment">
            <div>
                <br />
                <input asp-for="ApartmentNumber" placeholder="Apartment Number" class="fourth" style="margin:-10px 0 10px 0; width: 100%;" />
                <span asp-validation-for="ApartmentNumber" class="form-error"></span>
            </div>
            <div>
                <br />
                <input asp-for="Address" placeholder="Area" class="fourth" style="margin:-10px 0 10px 0; width: 100%;" />
                <span asp-validation-for="Address" class="form-error"></span>
            </div>
            <div>
                <br />
                <input asp-for="Area" placeholder="Area" class="fourth" style="margin:-10px 0 10px 0; width: 100%;" />
                <span asp-validation-for="Area" class="form-error"></span>
            </div>
            <div style="text-align: center">
                <input type="submit" value="Create" class="fourth" style="margin: auto;" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}