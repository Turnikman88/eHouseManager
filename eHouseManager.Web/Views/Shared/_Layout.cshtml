@{
    this.ViewData[Constants.SESSION_AUTH_KEY] = this.Context.Session.Keys.Contains(Constants.SESSION_AUTH_KEY);
    this.ViewData[Constants.SESSION_ROLE_KEY] = this.Context.Session.GetString(Constants.SESSION_ROLE_KEY);
}
<!DOCTYPE html>

<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="eHouseManager">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">

    <title>eHouseManager</title>
    <link rel="icon" type="image/png" href="@Constants.DOMAIN_NAME/images/favicon.png" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/fontawesome.css">
    <link rel="stylesheet" href="~/css/template.css">
    <link rel="stylesheet" href="~/css/owl.css">
    <link rel="stylesheet" href="~/css/site.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    <header class="">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <i class="fas fa-shipping-fast"></i>
                <a class="navbar-brand mr-auto" asp-controller="Home" asp-action="Index"><h2><sup>e</sup>House<sub>Manager</sub></h2></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse ml-auto" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li id="nav-home" class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                Начало
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li id="nav-about" class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">За нас</a>
                        </li>
                        @if ((bool)this.ViewData[Constants.SESSION_AUTH_KEY]
                            && this.ViewData[Constants.SESSION_ROLE_KEY].ToString() == Constants.ROLE_EMPLOYEE)
                            {

                                <li class="dropdown">
                                    <a class="nav-link dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="cursor:pointer;">
                                        Controller
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a asp-controller="Apartment" asp-action="Index" class="custom-dropdown-item">Create Apartment</a>
                                        <a asp-controller="Event" asp-action="AdminPanel" class="custom-dropdown-item">Events</a>
                                        
                                    </div>
                                </li>

                            }
                    </ul>
                </div>

                <div class="functional-buttons">
                    <ul>
                        @if (!(bool)this.ViewData[Constants.SESSION_AUTH_KEY])
                        {
                            <li><a asp-controller="Auth" asp-action="Login">Вход</a></li>
                            <li><a asp-controller="Auth" asp-action="Register">Регистрация</a></li>
                        }
                        else
                        {


                            @if (this.ViewData[Constants.SESSION_ROLE_KEY].ToString() == Constants.ROLE_USER)
                            {
                                <li><a asp-controller="Auth" asp-action="Settings">Настройки</a></li>

                                <li><a asp-controller="Apartment" asp-action="UserInfo" class="test-btn">Моите апартаменти</a></li>
                            }

                            <li><a asp-controller="Auth" asp-action="Logout">Изход</a></li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()


    <div class="modal" id="form-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="footer-item">
                        <div class="footer-heading">
                            <h2>За нас</h2>
                        </div>
                        <p>Ние сме млад и иновативен екип, с амбиция да модернизираме начина, по който се управляват сградите в режим на Етажна Собственост (ЕС), да улесним прозрачността и споделянето на информация между обитателите на ЕС. Стремим се да откликнем на индивидуалните потребности на всеки клиент, стъпвайки върху добрите и утвърдили се практики от споделения опит на Управители на ЕС. Работата с нас Ви гарантира спокойствие, комфорт и максимален стремеж от наша страна за задоволяване на нуждите на вашата ЕС.</p>
                    </div>
                </div>

         


                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="footer-item">
                        <div class="footer-heading">
                            <h2>Полезни връзки</h2>
                        </div>
                        <ul class="footer-list">
                            <li><a href="https://www.mrrb.bg/bg/zakon-za-upravlenie-na-etajnata-sobstvenost/">ЗУЕС</a></li>
                            <li><a href="http://www.cez.bg/bg/home.html">ЧЕЗ България</a></li>
                            <li><a href="http://www.sofiyskavoda.bg/">Софийска вода</a></li>
                            <li><a href="https://toplo.bg/">Топлофикация София</a></li>

                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="footer-item">
                        <div class="footer-heading">
                            <h2>Повече информация</h2>
                        </div>
                        <ul class="footer-list">
                            <li>Телефон <a href="#">010-020-0560</a></li>
                            <li>Ел.поща: <a href="#">mail@company.com</a></li>
                            <li>Подръжка <a href="#">support@company.com</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Ends Here -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="~/js/custom.js"></script>
    <script src="~/js/owl.js"></script>
    <script src="~/js/accordions.js"></script>


    <script language="text/Javascript">
        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
        function clearField(t) {                   //declaring the array outside of the
            if (!cleared[t.id]) {                      // function makes it static and global
                cleared[t.id] = 1;  // you could use true and false, but that's more typing
                t.value = '';         // with more chance of typos
                t.style.color = '#fff';
            }
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>